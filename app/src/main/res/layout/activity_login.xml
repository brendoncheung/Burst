<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.login.LoginActivity">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/activity_login_username_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_login_password_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/activity_login_username_edittext"
        app:layout_constraintStart_toStartOf="@+id/activity_login_username_edittext"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_username_edittext" />

    <Button
        android:id="@+id/activity_login_login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/activity_login_password_edittext"
        app:layout_constraintStart_toStartOf="@+id/activity_login_password_edittext"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_password_edittext" />
</android.support.constraint.ConstraintLayout>